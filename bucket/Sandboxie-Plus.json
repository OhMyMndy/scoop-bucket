    "pre_install": [
        "# Copy or create files for persisting",
        "if (!(Test-Path \"$persist_dir\\config.json\")) {",
        "    if (Test-Path \"C:\\Windows\\Sandboxie.ini\") {",
        "        Move-Item \"C:\\Windows\\Sandboxie.ini\" \"$dir\\Sandboxie.ini\"",
        "    }",
        "    else {",
        "        New-Item \"$dir\\Sandboxie.ini\" -Type File | Out-Null",
        "    }",
        "}"
    ],
    "installer": {
        "args": [
            "/verysilent",
            "/nocancel",
            "/norestart",
            "/noicons",
            "/dir=$dir"
        ]
    },
    "uninstaller": {
        "file": "unins000.exe",
        "args": [
            "/verysilent",
            "/nocancel",
            "/norestart"
        ]
    },
    "persist": "Sandboxie.ini",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "32bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/$version/Sandboxie-Plus-x86-v$version.exe"
            },
            "64bit": {
